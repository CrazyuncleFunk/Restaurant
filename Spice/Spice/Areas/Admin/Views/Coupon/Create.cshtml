@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Create Coupon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Create Coupon</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <div class="background-white border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label font-weight-bolder"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" type="text" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label font-weight-bolder"></label>
            </div>
            <div class="col-5">
                <input class="form-control" type="file" id="projectImage" name="files" multiple />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label font-weight-bolder"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label font-weight-bolder"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" type="text" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label font-weight-bolder"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmount" class="form-control" type="text" />
            </div>
            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
        </div>
        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label font-weight-bolder"></label>
            </div>
            <div class="col-5">
                <input asp-for="IsActive" class="form-control" type="checkbox" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-4">
                <partial name="_CreateAndReturnButton" />
            </div>

        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
