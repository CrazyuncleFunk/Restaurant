@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel

@{
    ViewData["Title"] = "View SubCategory";
}

<br />
<h2>View SubCategory</h2>
<br />

<form method="post" asp-action="Details">
    <div class="background-white border">
        <div class="form-group row">
            <div class="col-2 offset-2">
                <label asp-for="SubCategory.Name" class="col-form-label font-weight-bolder"></label>
            </div>
            <div class="col-5">
                <input asp-for="SubCategory.Name" class="form-control" type="text" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-2">
                <label asp-for="SubCategory.Category.Name" class="col-form-label font-weight-bolder"></label>
            </div>
            <div class="col-5">
                <input asp-for="SubCategory.Category.Name" class="form-control" type="text" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-4">
                <partial name="_DetailsAndReturnButton" model="Model.SubCategory.Id" />
            </div>

        </div>
    </div>
</form>
